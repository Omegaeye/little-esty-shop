<%= form_with url: merchant_bulk_discounts_path(@merchant), method: :post, local: true do |f| %>
  <%= f.label :percent %>
  <%= f.number_field :percent , min: 0, step: 0.01, max: 1 %>
  <%= f.label :quantity_threshold %>
  <%= f.number_field :quantity_threshold , min: 0%>
  <%= f.submit "Add Discount" %>
<% end %>
