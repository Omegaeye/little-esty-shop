<%= form_with url: merchant_bulk_discount_path(@merchant, @bulkdiscount), method: :patch, local: true do |f| %>
  <%= f.label :percent %>
  <%= f.number_field :percent, min: 0, step: 0.01, max: 1, value: @bulkdiscount.percent, required: true %>
  <%= f.label :quantity_threshold%>
  <%= f.number_field :quantity_threshold, value: @bulkdiscount.quantity_threshold, min: 0, required: true %>
  <%= f.submit "Update Discount" %>
<% end %>
