<section class="all-items">
  <div id="table-wrapper">
    <div id="table-scroll">
      <table class="table table-striped table-borderless">
        <thead >
          <tr>
            <th scope="col"><span class="text white_glow"><h2>Bulk Discount Percentage:</h2></span></th>
            <th scope="col"><span class="text white_glow"><h2>Quantity Threshold:</h2></span></th>
            <th scope="col"><span class="text white_glow"><h2>Status:</h2></span></th>

          </tr>
        </thead>
        <tbody>
            <tr>
              <section id="discount-<%= @bulkdiscount.id %>">
              <td> <%= @bulkdiscount.percent * 100 %>%</td>
              <td><%= @bulkdiscount.quantity_threshold %></td>
              <td> <%= @bulkdiscount.status %> </td>
            </section>
            </tr>
        </tbody>
      </table>
      <% if @bulkdiscount.invoice_items_pending? %>
        <%= button_to "Delete Discount",  merchant_bulk_discount_path(@merchant, @bulkdiscount), method: :delete %>
        <%= button_to "Update Discount",  edit_merchant_bulk_discount_path(@merchant, @bulkdiscount), method: :get %>
        <% end %>
    </div>
  </div>
</section>
